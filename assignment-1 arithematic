#include<stdio.h>
main()
{
    int no1,no2;
    int*ptr1,*ptr2;
    int sum,sub,mul,div;
    printf("enter first number");
    scanf("%d",&no1);
    printf("enter second number");
    scanf("%d",&no2);
    ptr1=&no1;
    ptr2=&no2;
    sum=(*ptr1)+(*ptr2);
    sub=(*ptr1)-(*ptr2);
    mul=(*ptr1)*(*ptr2);
    div=(*ptr1)/(*ptr2);
    printf("sum=%d",sum);
    printf("sub=%d",sub);
    printf("mul=%d",mul);
    printf("div=%d",div);
}
